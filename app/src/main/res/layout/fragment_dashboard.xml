<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/CalorieView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/VitaminAView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/VitaminCView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/goToGraphBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go To This Week's Analysis" />

        <Button
            android:id="@+id/goToRecapBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Last Week's Recap" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>